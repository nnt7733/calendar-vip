generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Multi-tenant schema with Clerk Auth
// All models include userId for tenant isolation

model Transaction {
  id            String   @id @default(cuid())
  userId        String   // Clerk user ID
  type          String   // INCOME | EXPENSE
  amount        Int
  currency      String
  categoryId    String
  note          String
  dateAt        DateTime
  paymentMethod String?  // CASH | BANK | EWALLET
  isRecurring   Boolean  @default(false)
  recurringRule String?
  createdAt     DateTime @default(now())
  category      Category @relation(fields: [categoryId], references: [id])
  reminders     CalendarItem[]

  @@index([userId])
}

model Category {
  id           String        @id @default(cuid())
  userId       String        // Clerk user ID
  name         String
  icon         String?
  type         String        // INCOME | EXPENSE | BOTH
  transactions Transaction[]
  budgets      Budget[]

  @@index([userId])
}

model Budget {
  id           String    @id @default(cuid())
  userId       String    // Clerk user ID
  month        String
  categoryId   String?
  limitAmount  Int
  alertPercent Int       @default(80)
  createdAt    DateTime  @default(now())
  category     Category? @relation(fields: [categoryId], references: [id])

  @@index([userId])
}

model CalendarItem {
  id                String      @id @default(cuid())
  userId            String      // Clerk user ID
  type              String      // TASK | NOTE | EVENT | FINANCE_REMINDER
  title             String
  description       String
  startAt           DateTime?
  endAt             DateTime?
  dueAt             DateTime?
  status            String      @default("TODO") // TODO | DONE
  tags              String
  linkTransactionId String?
  transaction       Transaction? @relation(fields: [linkTransactionId], references: [id])

  @@index([userId])
}

model Settings {
  id             String   @id @default(cuid())
  userId         String   @unique // Clerk user ID - One-to-One with User
  groqApiKey     String?  // Groq API Key (encrypted in production)
  theme          String   @default("dark") // dark | light
  currency       String   @default("VND")
  language       String   @default("Tiếng Việt")
  dailyUsageCount Int     @default(0) // Số lần sử dụng AI hôm nay
  lastUsageDate  String? // Ngày sử dụng cuối (YYYY-MM-DD)
  updatedAt      DateTime @default(now()) @updatedAt

  @@index([userId])
}

model SmartKeyword {
  id             String   @id @default(cuid())
  keyword        String   @unique
  mappedType     String   // TRANSACTION | TASK | EVENT
  mappedCategory String?
  userId         String

  @@index([userId])
}