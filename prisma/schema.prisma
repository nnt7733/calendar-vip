generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  BANK
  EWALLET
}

enum CalendarItemType {
  TASK
  NOTE
  EVENT
  FINANCE_REMINDER
}

enum CalendarStatus {
  TODO
  DONE
}

enum CategoryType {
  INCOME
  EXPENSE
  BOTH
}

model Transaction {
  id            String          @id @default(cuid())
  type          TransactionType
  amount        Int
  currency      String
  categoryId    String
  note          String
  dateAt        DateTime
  paymentMethod PaymentMethod?
  isRecurring   Boolean         @default(false)
  recurringRule String?
  createdAt     DateTime        @default(now())
  category      Category        @relation(fields: [categoryId], references: [id])
  reminders     CalendarItem[]
}

model Category {
  id           String         @id @default(cuid())
  name         String
  icon         String?
  type         CategoryType
  transactions Transaction[]
  budgets      Budget[]
}

model Budget {
  id           String   @id @default(cuid())
  month        String
  categoryId   String?
  limitAmount  Int
  alertPercent Int      @default(80)
  createdAt    DateTime @default(now())
  category     Category? @relation(fields: [categoryId], references: [id])
}

model CalendarItem {
  id                String           @id @default(cuid())
  type              CalendarItemType
  title             String
  description       String
  startAt           DateTime?
  endAt             DateTime?
  dueAt             DateTime?
  status            CalendarStatus   @default(TODO)
  tags              String
  linkTransactionId String?
  transaction       Transaction?     @relation(fields: [linkTransactionId], references: [id])
}
